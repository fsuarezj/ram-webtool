<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="org.lrc.liferay.toolbuilder">
	<author>Fernando Su√°rez</author>
	<namespace>lrc_tb</namespace>

	<entity name="ToolInstance" local-service="true">

		<!-- PK fields -->

		<!-- Group instance -->

		<column name="groupId" type="long"></column>

		<!-- Audit fields -->

		<column name="companyId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
		<column name="name" type="String"></column>


		<!-- PK fields -->

		<!-- Group instance -->

		<!-- Audit fields -->


		<!-- PK fields -->

		<!-- Group instance -->

		<!-- Audit fields -->
        <column name="toolInstanceId" type="long" primary="true"></column>
        <column name="wrapperStepId" type="long" primary="false"></column>
        <finder name="GroupId" return-type="Collection">
            <finder-column name="groupId"></finder-column>
        </finder>
        <finder name="G_N" return-type="Collection">
            <finder-column name="groupId"></finder-column>
            <finder-column name="name"></finder-column>
        </finder>
        <finder name="UserId" return-type="Collection">
            <finder-column name="userId"></finder-column>
        </finder>
	</entity>
	<entity name="WrapperStep" local-service="true">

		<!-- PK fields -->

		<column name="wrapperStepId" type="long" primary="true"></column>

		<!-- Group instance -->

		<column name="groupId" type="long"></column>

		<!-- Audit fields -->

		<column name="companyId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
        <column name="currentStep" type="int"></column>
        <column name="sequential" type="boolean"></column>
        <column name="stepsNumber" type="int"></column>
	</entity>
	<exceptions>
        <exception>InstanceName</exception>
    </exceptions>
</service-builder>